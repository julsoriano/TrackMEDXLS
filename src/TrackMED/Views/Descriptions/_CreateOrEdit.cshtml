@model TrackMED.Models.Description

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Desc" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Desc" class="form-control" />
            <span asp-validation-for="Desc" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Tag" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Tag" class="form-control" />
            <span asp-validation-for="Tag" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CreatedAtUtc" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="CreatedAtUtc" class="form-control" value="@DateTime.Now" />
            <span asp-validation-for="CreatedAtUtc" class="text-danger" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}